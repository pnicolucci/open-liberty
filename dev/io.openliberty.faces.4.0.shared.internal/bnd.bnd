-include= ~../cnf/resources/bnd/bundle.props

bVersion=1.0

Bundle-Name: Faces 4.0 Liberty Integration
Bundle-SymbolicName: io.openliberty.faces.4.0.shared.internal
#Implementation-Version: 4.0.0

app-resources= \
  META-INF/services/org.apache.myfaces.spi.AnnotationProvider

Include-Resource: \
  META-INF=@src/META-INF

# Components for faces-4.0
Service-Component: \
  io.openliberty.myfaces.initializer; \
    implementation:=io.openliberty.faces40.shared.internal.ee.WASMyFacesContainerInitializer; \
    provide:=javax.servlet.ServletContainerInitializer; \
    properties:="service.vendor=IBM,service.ranking:Integer=101"

Import-Package: \
  jakarta.faces.webapp, \
  *

#add pacakgeinfo.java
Export-Package: \
  io.openliberty.faces40.shared.internal.ee, \
  io.openliberty.faces40.shared.internal.config.annotation

-buildpath: \
  io.openliberty.jakarta.servlet.6.0;version=latest,\
  io.openliberty.jakarta.faces.4.0;version=latest,\
  io.openliberty.org.apache.myfaces.4.0;version=latest,\
  com.ibm.ws.jsf.shared;version=latest,\
  com.ibm.ws.org.osgi.annotation.versioning;version=latest,\
  com.ibm.ws.logging.core,\
  com.ibm.ws.webcontainer.jakarta;version=latest,\
  com.ibm.ws.adaptable.module;version=latest,\
  com.ibm.ws.anno;version=latest,\
  com.ibm.ws.container.service;version=latest
