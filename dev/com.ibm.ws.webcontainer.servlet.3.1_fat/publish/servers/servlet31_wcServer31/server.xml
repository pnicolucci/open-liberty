<server description="Server for testing web container 31 features">

  <!-- <include location="../fatTestPorts.xml"/> -->
  <!-- Don't use the defaults; those collide with wcServer. -->
  <!-- Use the "1" ports for wcServer30; use the "2" ports for wcServer31. -->
    
  <featureManager>
    <feature>timedexit-1.0</feature>
  </featureManager>

  <httpEndpoint id="defaultHttpEndpoint"
    host="*"
    httpPort="${bvt.prop.member_2.http}"
    httpsPort="${bvt.prop.member_2.https}"/>  

  <featureManager>
    <feature>servlet-3.1</feature>
  </featureManager>
    
  <logging
    traceSpecification="*=info=enabled:com.ibm.ws.webcontainer*=all:com.ibm.wsspi.webcontainer*=all:HTTPTransport=all:HTTPChannel=all:TCPChannel=all:GenericBNF=all:com.ibm.ws.jsp*=all"
    maxFileSize="40"
    maxFiles="40"
    traceFormat="BASIC"/> 

</server>